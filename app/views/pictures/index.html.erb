<p id="notice"><%= notice %></p>

<h1 class="text-center m-4">Pictures Album</h1>

<div class="row">
    <% @pictures.each do |picture| %>
      <div class="col-md-4">
        <div class="image">
          <%= link_to picture_path(picture), method: :get do %>
            <%= image_tag picture.url, class: 'img-fluid' %>
          <% end %>
        </div>
        <div class="text-center image-title mt-2">
          <%= link_to picture_path(picture), method: :get do %>
            <h4><%= picture.title %></h4>
          <% end %>
        </div>
        <div><%= link_to 'Edit', edit_picture_path(picture) %></div>
        <div><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></div>
      </div>
    <% end %>
</div>
<div class="new-image">
  <%= link_to '+', new_picture_path %>  
</div>
